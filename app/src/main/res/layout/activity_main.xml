<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#000"
        tools:context=".MainActivity">

    <TextView
        android:id="@+id/math_operation"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:gravity="end"
        android:ellipsize="start"
        android:textColor="@android:color/white"
        android:singleLine="true"
        android:textSize="40sp"
        android:text=""
        android:inputType="numberDecimal"/>



    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textColor="@android:color/white"
        android:gravity="end"
        android:ellipsize="start"
        android:singleLine="true"
        android:textSize="35sp"
        android:text=""
        android:inputType="numberDecimal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <Button
                style="@style/ActionButton"
                android:id="@+id/clear"
                android:text="AC" />

            <Button

                style="@style/ActionButton"
                android:text=""
                />
            <Button

                style="@style/ActionButton"
                android:text=""
                />
            <Button
                style="@style/ActionButton"
                android:id="@+id/division"
                android:text="/"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_7"
                style="@style/ActionButton"
                android:text="7" />

            <Button
                android:id="@+id/btn_8"
                style="@style/ActionButton"
                android:text="8" />

            <Button
                android:id="@+id/btn_9"
                style="@style/ActionButton"
                android:text="9" />

            <Button
                style="@style/ActionButton"
                android:id="@+id/multiply"
                android:text="*" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_4"
                style="@style/ActionButton"
                android:text="4" />

            <Button
                android:id="@+id/btn_5"
                style="@style/ActionButton"
                android:text="5" />

            <Button
                android:id="@+id/btn_6"
                style="@style/ActionButton"
                android:text="6" />

            <Button
                style="@style/ActionButton"
                android:id="@+id/minus"
                android:text="-"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_1"
                style="@style/ActionButton"
                android:text="1" />

            <Button
                android:id="@+id/btn_2"
                style="@style/ActionButton"
                android:text="2" />

            <Button
                android:id="@+id/btn_3"
                style="@style/ActionButton"
                android:text="3" />
            <Button
                style="@style/ActionButton"
                android:id="@+id/plus"
                android:text="+"
            />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <Button
                style="@style/ActionButton"
                android:id="@+id/dot_btn"
                android:text="."
                />

            <Button
                android:id="@+id/btn_0"
                style="@style/ActionButton"
                android:text="0" />

            <Button
                android:id="@+id/back_btn"
                style="@style/ActionButton"
                android:text="Back" />

            <Button
                style="@style/ActionButton"
                android:id="@+id/equals"
                android:text="="
                />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>